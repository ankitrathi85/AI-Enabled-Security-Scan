{
  "name": "juice-shop-security-framework",
  "version": "1.0.0",
  "description": "AI-Enhanced Security Testing Framework for OWASP Juice Shop using Playwright and ZAP",
  "main": "index.js",
  "scripts": {
    "test": "node index.js",
    "test:login": "node index.js --scenario=login",
    "test:registration": "node index.js --scenario=registration",
    "test:quick": "node index.js --quick",
    "test:mocha": "node mocha-runner.js",
    "test:mocha:auth": "node mocha-runner.js --filter='Authentication Security Tests'",
    "test:mocha:input": "node mocha-runner.js --filter='Input Validation Security Tests'",
    "test:mocha:business": "node mocha-runner.js --filter='Business Logic Security Tests'",
    "test:mocha:only": "npx mocha --config .mocharc.json",
    "install-browsers": "npx playwright install",
    "dev": "node index.js --dev",
    "setup-ollama": "./scripts/setup-ollama.sh",
    "check-ollama": "node src/ollama-check.js",
    "test-ollama": "AI_PROVIDER=ollama npm test"
  },
  "keywords": [
    "security",
    "testing",
    "owasp",
    "zap",
    "playwright",
    "ai",
    "vulnerability"
  ],
  "author": "Security Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "openai": "^4.20.1",
    "ora": "^5.4.1",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "chai": "^5.2.1",
    "eslint": "^8.0.0",
    "mocha": "^11.7.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
